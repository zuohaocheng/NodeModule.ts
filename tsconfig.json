{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": false,
        "sourceMaps": true,
        "noLib": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "build/"
    },
    "filesGlob": [
        "src/**/*.ts"
    ]
}